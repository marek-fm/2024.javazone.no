---
import Layout from "@/layouts/Layout.astro";
import {formatOrdinals} from "@/utils/formatOrdinals";
---

<Layout title="JavaZone 2024">
    <main class="wrapper">
        <section>
            <h1>JavaZone 2024</h1>
            <p>September {formatOrdinals(4)}-{formatOrdinals(5)} 2024 in Oslo Spektrum, Norway</p>
            <p>Conference: September {formatOrdinals(4)}-{formatOrdinals(5)}</p>
            <p>Workshops: September {formatOrdinals(3)}</p>
            <p><a href="/partner">Information for partners found here</a></p>
            <p>Last year's program can be found at <a href="https://2023.javazone.no/program">https://2023.javazone.no/program</a>
            </p>
        </section>
    </main>

</Layout>

<style>
    body {
        background-image: url("../images/main-area.jpg");
        backdrop-filter: blur(3px);
    }

    section {
        padding: 1rem;
        background: wheat;
        color: black;
        box-shadow: 1px 1px 1000px lightgray;
    }

    h1 {
        font-size: 3rem;
    }

    .wrapper {
        min-height: 100dvh;
        display: grid;
        place-content: center;
    }
</style>
